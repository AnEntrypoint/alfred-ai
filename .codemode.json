{
  "$schema": "https://schemas.modelcontextprotocol.io/0.1.0/mcp.json",
  "mcpServers": {
    "builtInTools": {
      "command": "node",
      "args": [
        "built-in-tools-mcp.js"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--user-data-dir",
        "/tmp/playwright-mcp-primary"
      ]
    },
    "playwright-secondary": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--user-data-dir",
        "/tmp/playwright-mcp-secondary"
      ]
    },
    "playwright-tertiary": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--user-data-dir",
        "/tmp/playwright-mcp-tertiary"
      ]
    },
    "vexify": {
      "command": "npx",
      "args": [
        "-y",
        "vexify@latest",
        "mcp"
      ]
    }
  }
}